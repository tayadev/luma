# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Rust files
[*.rs]
indent_style = space
indent_size = 4

# Markdown files (preserve trailing whitespace for line breaks)
[*.md]
trim_trailing_whitespace = false

# TOML, JSON, YAML files
[*.{toml,json,yaml,yml}]
indent_style = space
indent_size = 2

# TypeScript/JavaScript files (docs)
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,ps1}]
indent_style = space
indent_size = 4
